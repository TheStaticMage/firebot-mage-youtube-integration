{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2017",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"]
}
